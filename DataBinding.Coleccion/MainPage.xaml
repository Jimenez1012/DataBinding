<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding.Coleccion.MainPage"
             Title="Enlace de datos a una coleccion">

    <Grid
        RowSpacing="8"
        RowDefinitions="auto,*"
        Margin="16">
        <Border
            Padding="16"
            Stroke="Gray"
            StrokeThickness="1">
            <Grid
                ColumnDefinitions="auto,*,auto">
                <Label
                    VerticalOptions="Center"
                    Text="Nombre:"/>
                <Entry
                    Grid.Column="1"
                    BackgroundColor="LightGray"
                    Text="{Binding Path=Nombre}"
                    x:Name="NombreEntry"/>
                <Button
                    Margin="8,0,0,0"
                    Grid.Column="2"
                    Text="Agregar"
                    Clicked="AgregarButtonClicked"/>
            </Grid>
            
        </Border>
        <CollectionView
            Grid.Row="1"
            BackgroundColor="Salmon"
            SelectionMode="Single"
            EmptyView="No se han registrado nombres"
            x:Name="UsuariosCollectionView"
            ItemsSource="{Binding}">
            <!--CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Clark Kent</x:String>
                    <x:String>Peter Parker</x:String>
                    <x:String>Bruce Wayne</x:String>
                    <x:String>Tony Stark</x:String>
                </x:Array>                                                             
            </CollectionView.ItemsSource-->

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Stroke="Beige"
                        StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5"/>
                        </Border.StrokeShape>

                        <Label
                        Text="{Binding Path=Nombre}"
                        FontSize="16"
                        Padding="4"
                        TextColor="White"
                        BackgroundColor="MediumVioletRed"/>
                    </Border>
                </DataTemplate>
                 
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
